<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:orientation="vertical">
    <ImageView android:id="@+id/image_layout_imageView"
               android:layout_width="@dimen/captured_image_size"
               android:layout_height="@dimen/captured_image_size"
               android:layout_gravity="center"
               android:layout_marginTop="@dimen/big_padding"
               android:contentDescription="@string/captured_plant_image_description"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/image_layout_textView"
              android:layout_gravity="center"/>

    <Button android:id="@+id/image_layout_accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:layout_gravity="center"/>
    <Button android:id="@+id/image_layout_decline_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:layout_gravity="center"/>
</LinearLayout>